@model g212102053_mehmet_kaan_akcan_odev.Models.Siniflar.Main
@{
    ViewBag.Title = "MainUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Anasayfa Tanıtım Güncelleme</h2>
<br />
@using (Html.BeginForm("Update", "AdminMain", FormMethod.Post))
{
    <div class="form-group">
        <label>Tanıtım</label>
        @Html.TextAreaFor(x => x.Promotion, new { @class = "form-control", @required = "required" })
        @Html.HiddenFor(x => x.MainID)
        @Html.ValidationMessageFor(x => x.Promotion, "", new { @style = "color:red" })

    </div>
    <br />
        <button class="btn btn-warning">Güncelle</button>
    }
